        /* Estilos para el menú hamburguesa */
.menu {
            display: none; /* Oculta el menú por defecto en móviles */
        }
.menu-toggle {
            display: none; /* Oculta el botón de menú hamburguesa por defecto */
            cursor: pointer;
        }

@media (max-width: 768px) {
    .menu {
                display: none; /* Oculta el menú en pantallas pequeñas */
            }

    .menu-toggle {
                display: block; /* Muestra el botón de menú hamburguesa en pantallas pequeñas */
            }

    .menu.active {
                display: block; /* Muestra el menú cuando está activo */
                position: absolute;
                top: 0; /* Ajusta según la altura del navbar */
                left: 0;
                right: 0;
                background: rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(10px);
                z-index: 10;
            }
        }